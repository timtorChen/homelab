{{ define "worker" }}
{{ $secret := merge 
  ( ds "aws-homelab" "/amethyst/talos-machine" | data.JSON ) 
  ( ds "aws-homelab" "/amethyst/talos-cluster" | data.JSON )
}}
version: v1alpha1
debug: false
persist: true
machine:
  # -- Setup
  type: worker
  token: {{ $secret.machine_token }}
  ca:
    crt: {{ $secret.machine_ca_crt }}
    key: ""
  certSANs: []
  install:
    disk: ""
    image: ""
    wipe: false
    extraKernelArgs:
      - talos.logging.kernel=tcp://192.168.253.100:3001
      # disable predictable interface naming
      - net.ifnames=0
  network: {}
  logging:
    destinations:
      - endpoint: tcp://192.168.253.100:3002
        format: json_lines
  # -- Services
  kubelet:
    image: ""
    defaultRuntimeSeccompProfileEnabled: true
    disableManifestsDirectory: true
  # -- Talos features
  features:
    rbac: true
    stableHostname: true
    apidCheckExtKeyUsage: true
    kubePrism:
      enabled: true
      port: 7445
cluster:
  # -- Setup
  controlPlane:
    endpoint: https://192.168.253.10:6443
  network:
    cni:
      name: none
    dnsDomain: cluster.local
    podSubnets:
      - 10.244.0.0/16
    serviceSubnets:
      - 10.96.0.0/12
  id: {{ $secret.cluster_id }}
  secret: {{ $secret.cluster_secret }}
  token: {{ $secret.cluster_token }}
  ca:
    crt: {{ $secret.cluster_ca_crt }}
    key: ""
  # -- Service
  proxy:
    disabled: true
  # -- Extras
  discovery:
    enabled: false
{{ end }}
