{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':disableRateLimiting',
    'github>timtorChen/homelab//.renovate/groups.json5',
    'github>timtorChen/homelab//.renovate/customManagers.json5',
    'github>timtorChen/homelab//.renovate/autoMerge.json5',
  ],
  timezone: 'Asia/Taipei',
  dependencyDashboard: true,
  kubernetes: {
    managerFilePatterns: [
      '/^kubernetes/.*\\.yaml$/',
    ],
  },
  flux: {
    managerFilePatterns: [
      '/^kubernetes/.*\\.yaml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/^(kubernetes|talos)/.*\\.yaml$/',
    ],
  },
  ignorePaths: [
    '**/archive/**',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^talos/.*\\.yaml$/',
      ],
      datasourceTemplate: 'docker',
      matchStrings: [
        '# renovate: depName=(?<depName>.*?)\n *image: factory\\.talos\\.dev/installer/[a-z0-9]+:(?<currentValue>v[\\d\\.]+)',
      ],
    },
  ],
}
