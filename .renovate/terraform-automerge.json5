{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "matchDepTypes": [
        "provider"
      ],
      "matchDatasources": [
        "terraform-provider"
      ],
      "matchPackageNames": [
        "backblaze/b2",
        "hashicorp/aws",
        "cloudflare/cloudflare",
        "hashicorp/random",
        "grafana/grafana",
        "terraform-routeros/routeros"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}